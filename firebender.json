{
  "rules": [
    "Use sequential thinking mcp always",
    "Use context7 in parallel with the web searching for information"


  ],
  "mcpServers": {
    "context7": {
      "command": "npx.cmd",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "sequential-thinking": {
      "command": "npx.cmd",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "command": "npx.cmd",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    }
  },
  "commands": [
    {
      "name": "beast mode",
      "path": "./beastmode/beastmode.md",
      "model": "gpt-4.1"
    }
  ]
}



